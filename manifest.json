{
    "manifest_version": 3,
    "name": "Background Color Changer Extension",
    "version": "1.0",
    "description": "Change the background color of any webpage.",
    "permissions": [
      "activeTab"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "16.png",
        "48": "48.png"
      }
    },
    "icons": {
      "16": "16.png",
      "48": "48.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": ["styles.css"]
      }
    ]
}
